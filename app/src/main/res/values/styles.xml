<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="SplashScreen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="tittleText">
        <item name="android:textColor">@color/colorTextIcons</item>
        <item name="android:textSize">@dimen/tittle_text</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">sans-serif-condensed</item>
    </style>
    <style name="primaryText">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">@dimen/primary_text</item>
        <item name="fontFamily">sans-serif-condensed-medium</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundColor">@color/colorTextIcons</item>
    </style>
    <style name="secondaryText">
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:textSize">@dimen/secondary_text</item>
        <item name="fontFamily">serif</item>
    </style>
    <style name="roundImage">
        <item name="background">@drawable/round_shape</item>
    </style>

    <!-- Theme.AppCompat.Light.NoActionBar -->
</resources>
